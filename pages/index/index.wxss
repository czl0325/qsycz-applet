/**index.wxss**/
.back {
  background-attachment: fixed;
  background-position: 0 0;
  background-size: 100% 100%;
}

.center-view {
  background-color: #f6e4c0;
  width: 730rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.center-view input {
  margin: 10rpx auto;
  width: 100%;
  background-color: white;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: bold;
}

.center-view .money-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 20rpx;
}

.center-view .money-container .money {
  background-color: white;
  width: 32%;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.center-view .money-container .money .t1 {
  display: flex;
  justify-content: center;
  align-items: baseline;
  color: #E32D28;
}

.center-view .money-container .money .t1 .s1 {
  font-size: 60rpx;
  font-weight: bold;
}

.center-view .money-container .money .s2 {
  color: #444;
  font-size: 24rpx;
}

.bottom-view {
  width: 730rpx;
  height: 490rpx;
  margin: 20rpx auto;
  background: url('data:image/png;base64,') no-repeat center center;
  background-size: cover;
}

.bottom-view .bt {
  width: 100%;
  height: 80rpx;
  line-height: 100rpx;
  text-align: center;
  color: #E41D1C;
  font-size: 40rpx;
  font-weight: bold;
}