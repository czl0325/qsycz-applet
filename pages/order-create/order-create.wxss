/* pages/order-create/order-create.wxss */

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background-color: aqua;
}

.cell {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.bottom-view {
  background-color: white;
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  font-size: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.bottom-view button {
  background-color: #E02E24;
  color: white;
  border-radius: 10rpx;
  text-align: center;
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
}