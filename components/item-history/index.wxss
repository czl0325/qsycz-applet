/* components/item-history/index.wxss */

.cell {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
}

.cell image {
  width: 100rpx;
  height: 100rpx;
  background-color: aquamarine;
}

.cell .rv {
  flex: 1;
  height: 150rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cell .rv .rtv,
.cell .rv .rbv {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cell .rv .rbv .rblv {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 20rpx;
  color: #888;
}

.cell .rv .rbv .rbrv {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}